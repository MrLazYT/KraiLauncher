<UserControl x:Class="KraiLauncher.View.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KraiLauncher.Services"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#0B1013">
    <Grid
        HorizontalAlignment="Left"
        VerticalAlignment="Top">

        <TextBox
            Name="NicknameTBL"
            Background="#161b1e"
            Foreground="White"
            FontFamily="/Fonts/#Roboto Mono"
            FontSize="16"
            Width="200"
            Height="40"
            BorderThickness="0"
            Margin="20"
            Padding="12, 0"
            MaxLength="17"
            VerticalContentAlignment="Center" />

        <TextBlock
            x:Name="NicknamePL"
            Text="Псевдонім"
            Foreground="#3D4143"
            FontFamily="/Fonts/#Roboto Mono"
            FontSize="16"
            Margin="32, 36" />
    </Grid>
</UserControl>