<Window x:Class="KraiLauncher.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:buttons="clr-namespace:KraiLauncher.View.UserControls.Buttons"
        xmlns:local="clr-namespace:KraiLauncher"
        mc:Ignorable="d"
        Title="KraiLauncher" Height="623" Width="1033">
    <Grid Background="#0B1013">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="224"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="110"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <buttons:CardButton 
                    ImageSource="/Assets/steve_head.jpg"
                    PrimaryText="MrLazYT"
                    SecondaryText="Змінити"
                    Command="{Binding Path=NavigateToProfileCommand}"
                    />
            </Grid>
        </Grid>

        <ContentControl Grid.Column="1" Content="{Binding Path=Navigation.CurrentView}"/>
    </Grid>
</Window>
