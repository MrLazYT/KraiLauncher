<UserControl x:Class="KraiLauncher.View.UserControls.Buttons.CardButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KraiLauncher.View.UserControls.Buttons"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button
            Style="{StaticResource ProfileButton}"
            Margin="20"
            Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Image Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}" Width="45" Height="45" Margin="0, 0, 10, 0"/>

                <Grid VerticalAlignment="Center" Height="45">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Text="{Binding PrimaryText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Foreground="White"
                        FontFamily="Fonts/#Roboto Mono"
                        FontWeight="Bold"
                        FontSize="16"
                        VerticalAlignment="Top"
                        Grid.Row="0"/>

                    <TextBlock
                        Text="{Binding SecondaryText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Foreground="#B1B1B1"
                        FontFamily="Fonts/#Roboto Mono"
                        FontSize="16"
                        VerticalAlignment="Bottom"
                        Grid.Row="1"/>
                </Grid>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
